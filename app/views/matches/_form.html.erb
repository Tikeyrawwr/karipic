<%= form_with(model: @match, local: true) do |f| %>
    <% if @match.errors.any? %>
        <div id = 'error_explanation'>
            <h2>Este comentario no se pudo crear por las siguientes razones</h2>
                <ul>
                    <% @match.errors.full_messages.each do |msg|%>
                        <li><%= msg %></li>
                    <% end %>
                </ul>
        </div>
    <% end %>

<%= f.hidden_field :publication_id, value: @publication.id %>
    <div class = 'field'>
        <%= f.label :comentario, as: "Comentario" %>
        <%= f.text_field :comentario %>
            <div class = 'actions'>
        <%= f.submit %>
    </div>
<% end %>